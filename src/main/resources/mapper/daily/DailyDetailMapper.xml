        <![CDATA[
          tdd.daily_id = #{dailyId,jdbcType=VARCHAR}
          ORDER BY tdd.daily_id ASC
        ]]>
    </select>

    <!--查询某用户的未完成日报任务-->
    <select id="selectDailyDetailUnDone" parameterType="com.adtec.daily.bean.daily.DailyDetail" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List_TDD"/>
        FROM t_daily_detail tdd
        LEFT JOIN t_daily td on td.daily_id = tdd.daily_id
        WHERE 1=1
        <if test="userId != null">
            AND td.user_id = #{userId,jdbcType=VARCHAR}
        </if>
        <![CDATA[
            AND tdd.daily_percent <> '100'
        ]]>
        ORDER BY tdd.create_time
    </select>

    <select id="selectDailyDetailByUserId" resultMap="WithUserIdDetail">
        SELECT
        <include refid="WithUserId_Column_List" />
        FROM t_daily_detail tdd LEFT JOIN t_daily td
        ON tdd.daily_id = td.daily_id
        INNER JOIN t_user tu
        ON td.user_id = tu.user_id
        LEFT JOIN t_project tp
        ON tp.id = td.project_id
        WHERE 1=1
        <if test="userId != null">
            AND tu.user_id = #{userId,jdbcType=VARCHAR}
        </if>
        <if test="preFinishDateStart != '' and preFinishDateStart != null">
            AND td.daily_date >= #{preFinishDateStart,jdbcType=DATE}
        </if>
        <if test="preFinishDateEnd != '' and preFinishDateEnd != null">
            AND td.daily_date &lt;= #{preFinishDateEnd,jdbcType=DATE}
        </if>
        <if test="completeProgress != null and completeProgress !='' and completeProgress != '00'">
            AND tdd.execution = #{completeProgress,jdbcType=VARCHAR}
        </if>
    </select>

